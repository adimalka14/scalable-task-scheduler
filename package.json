{
  "name": "scalable-task-scheduler",
  "version": "1.0.0",
  "description": "A **Production-Like demo** of a scalable-task-scheduler system:",
  "homepage": "https://github.com/adimalka14/payments-api#readme",
  "bugs": {
    "url": "https://github.com/adimalka14/scalable-task-scheduler/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adimalka14/scalable-task-scheduler.git"
  },
  "license": "ISC",
  "author": "",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "worker": "npm run prisma:generate && ts-node src/workers/reminder/reminder.worker.ts",
    "worker:dev": "npx ts-node-dev --respawn --transpile-only src/workers/reminder/reminder.worker.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset --force",
    "export:zip": "git archive --format=zip --output=../scalable-task-scheduler.zip HEAD",
    "docker-compose:dev": "docker-compose -f infra/docker-compose.dev.yml up --build",
    "docker-compose:prod": "docker-compose -f infra/docker-compose.prod.yml up --build",
    "k6:baseline": "k6 run tests/k6/baseline.js",
    "k6:burst": "k6 run tests/k6/burst.js",
    "k6:stress": "k6 run tests/k6/stress_recovery.js",
    "k6:realistic": "k6 run tests/k6/realistic-usage.js",
    "k6:all": "npm run k6:baseline && npm run k6:burst",
    "k6:compare": "node tests/k6/compare.js",
    "dev:no-cache": "cross-env USE_CACHE=false npm run dev",
    "test:cache-impact": "echo Run with cache: npm run dev && npm run k6:realistic && echo Now run: npm run dev:no-cache && npm run k6:realistic"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "amqplib": "^0.10.8",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "dotenv-expand": "^12.0.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.1",
    "mongoose": "^8.16.4",
    "prom-client": "^15.1.3",
    "stripe": "^18.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/amqplib": "^0.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}